    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/Reserva_Vuelo/ObtenerPaises',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    var nombre = $("#inputState");
                    var nombre1 = $("#inputpais");
                    var datos = data.data;
                    $(datos).each(function (i, v) {
                        nombre.append('<option values ="' + v.id + '">' + v.nombre + '</option>')
                        nombre1.append('<option values ="' + v.id + '">' + v.nombre + '</option>')
                    });
                },
                error: function () {
                    console.log('err')
                }
            });
        });

    <form action="~/Reserva_Vuelo/Information" method="post">
        <div style=" margin-left: 25px; margin-right: 25px; border: 2px solid;">
            <header class="header2" style="color:black;">Recuerde que puede comprar con sus Puntos/Millas + Dinero</header>
            <div class="form-group" style="text-align:center;">
